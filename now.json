{
  "version": 2,
  "name": "saas-example",
  "builds": [
    { "src": "web/package.json", "use": "@now/next" },
    { "src": "api/src/*.js", "use": "@now/node", "config": { "maxLambdaSize": "10mb" } }
  ],
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "/api/src/index.js"
    },
    {
      "src": "^/(.*)$",
      "dest": "/web/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ]
}
